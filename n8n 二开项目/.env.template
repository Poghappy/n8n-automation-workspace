# 火鸟门户新闻自动化工作流环境配置模板
# 复制此文件为 .env 并填入实际值

# ===========================================
# 数据库配置 (n8n PostgreSQL)
# ===========================================
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_password_here

# ===========================================
# n8n 基础配置
# ===========================================
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here_123456
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678

# ===========================================
# 火鸟门户 API 配置
# ===========================================
# 火鸟门户基础URL
HUONIAO_BASE_URL=https://hawaiihub.net

# 火鸟门户API端点
HUONIAO_API_ENDPOINT=https://hawaiihub.net/include/ajax.php

# 火鸟门户会话ID (从浏览器Cookie中获取PHPSESSID)
HUONIAO_SESSION_ID=your_session_id_here

# 火鸟门户登录凭据 (用于会话刷新)
HUONIAO_USERNAME=your_username
HUONIAO_PASSWORD=your_password

# ===========================================
# Notion API 配置
# ===========================================
# Notion集成令牌 (从 https://www.notion.so/my-integrations 获取)
NOTION_API_TOKEN=your_notion_api_token_here

# Notion数据库ID (新闻内容库数据库ID)
NOTION_DATABASE_ID=your_notion_database_id_here

# Notion API版本
NOTION_VERSION=2022-06-28

# ===========================================
# OpenAI API 配置
# ===========================================
# OpenAI API密钥
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API基础URL (可选，默认为官方API)
OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI模型 (推荐使用 gpt-3.5-turbo 或 gpt-4)
OPENAI_MODEL=gpt-3.5-turbo

# ===========================================
# 监控和告警配置
# ===========================================
# Webhook告警URL (可选)
WEBHOOK_ALERT_URL=

# Slack Webhook URL (可选)
SLACK_WEBHOOK_URL=

# ===========================================
# 安全配置
# ===========================================
# API网关密钥 (用于请求签名验证)
GATEWAY_SECRET_KEY=your_gateway_secret_key_here

# 是否启用安全验证
ENABLE_SECURITY=true

# ===========================================
# 性能配置
# ===========================================
# 批处理大小 (同时处理的新闻数量)
BATCH_SIZE=5

# 速率限制 (每分钟最大请求数)
RATE_LIMIT=10

# 重试次数
RETRY_ATTEMPTS=3

# 重试延迟 (毫秒)
RETRY_DELAY=2000

# ===========================================
# RSS源配置
# ===========================================
# RSS源列表 (JSON格式)
RSS_SOURCES='[
  {
    "name": "The Neuron",
    "url": "https://www.theneuron.ai/feed",
    "category": "AI资讯"
  },
  {
    "name": "Futurepedia", 
    "url": "https://www.futurepedia.io/rss",
    "category": "AI工具"
  },
  {
    "name": "Superhuman",
    "url": "https://superhuman.com/feed",
    "category": "生产力工具"
  },
  {
    "name": "The Rundown AI",
    "url": "https://www.therundown.ai/feed",
    "category": "AI资讯"
  }
]'

# ===========================================
# 日志配置
# ===========================================
# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# 是否启用详细日志
ENABLE_VERBOSE_LOGGING=true

# 日志保留天数
LOG_RETENTION_DAYS=30

# ===========================================
# 火鸟门户完整Cookie配置 (自动生成)
# ===========================================
# 完整Cookie字符串 (包含所有认证信息)
HUONIAO_FULL_COOKIES="your_full_cookies_here"

# 管理员认证Cookie
HUONIAO_ADMIN_AUTH="your_admin_auth_cookie_here"

# 用户类型
HUONIAO_USER_TYPE="0"

# 时区配置
HUONIAO_TIMEZONE="PRC"

# 语言配置
HUONIAO_LANG="zh-CN"